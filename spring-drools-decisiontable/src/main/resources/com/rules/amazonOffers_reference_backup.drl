package com.rules;
import com.javaoutofbounds.drools.drl.Subscribe;

rule "GooglePay"

when
$subscribe : Subscribe(clientName=="GooglePay" && offerName=="Amazon Prime" && sync==false);
then
$subscribe.setDiscountInPercentage(10);
$subscribe.setSync(true);
end;

